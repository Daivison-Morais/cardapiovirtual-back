generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id       Int    @id(map: "categories_pk") @default(autoincrement())
  name     String @unique @db.VarChar(255)
  imageUrl String @unique
}

model product {
  id           Int     @id(map: "product_pk") @default(autoincrement())
  name         String  @db.VarChar(255)
  imageUrl     String
  description  String? @db.VarChar(500)
  price        Int
  categoriesId Int
}

model requests {
  id           Int       @id(map: "requests_pk") @default(autoincrement())
  listRequests String
  description  String?   @db.VarChar(700)
  status       String    @db.VarChar(255)
  tableNumber  Int
  totalPrice   Int
  createdAt    DateTime? @default(now()) @db.Timestamptz(6)
}

model historic {
  id           Int      @id(map: "historic_pk") @default(autoincrement())
  listRequests String
  description  String?  @db.VarChar(700)
  status       String   @db.VarChar(255)
  tableNumber  Int
  createdAt    DateTime @default(dbgenerated("'2023-02-06 12:08:56.739878-03'::timestamp with time zone")) @db.Timestamptz(6)
  totalPrice   Int
}
